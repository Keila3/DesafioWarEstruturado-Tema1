{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build app",
      "type": "shell",
      "command": "gcc",
      "args": [
        "-std=c11",
        "-g",
        "-Wall",
        "-Wextra",
        "main.c",
        "territorio.c",
        "-o",
        "app"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": ["$gcc"]
    }
  ]
}